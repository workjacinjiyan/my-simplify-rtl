{
  "extends": ["react-app"],
  "plugins": ["jest-dom", "testing-library"],
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "extends": [
        "plugin:jest-dom/recommended",
        "plugin:testing-library/react"
      ],
      "rules": {
        "testing-library/prefer-screen-queries": "error"
      }
    }
  ]
}
